<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/menu">
    <LinearLayout
        android:paddingTop="50dp" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btncontroler"
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:background="@drawable/controler"
            android:onClick="mOnClick" />
        <ImageButton
            android:id="@+id/btnimu"
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:background="@drawable/imu"
            android:onClick="mOnClick" />
        <ImageButton
            android:id="@+id/btnmode"
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:background="@drawable/mode"
            android:onClick="mOnClick" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnspeech"
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:background="@drawable/speech"
            android:onClick="mOnClick" />
        <ImageButton
            android:id="@+id/btndiary"
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:background="@drawable/diary"
            android:onClick="mOnClick" />
        <ImageButton
            android:id="@+id/btnmic"
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:background="@drawable/mic"
            android:onClick="mOnClick" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:background="#ff9aedec"/>
        <ImageButton
            android:id="@+id/btnapp"
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:background="@drawable/info"
            android:onClick="mOnClick" />
        <ImageButton
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:background="#ff9aedec"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/txt"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:paddingTop="30dp" 
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description" />
    
</LinearLayout>